<%- include ("partials/header") %>
<div class="container">
    <div class="row">
        <h3 style="text-align: center;">Sign In</h3>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" id="" placeholder="username" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="" placeholder="password" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="signin">
                    <!-- <button class="btn btn-lg btn-primary btn-block">signin</button> -->
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
